@using ECommerce.UI.Areas.Admin.Models
@model CategoryViewModel<ECommerce.Core.DTOs.Request.AddCategoryRequest>

<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div   class="text-danger"> @Model?.ErrorMessage </div>
        <div class="text-danger"> @Model?.SuccedMessage </div>
        <div class="form-group">
            <label asp-for="Data.Name" class="control-label"></label>
            <input asp-for="Data.Name" class="form-control" />
            <span asp-validation-for="Data.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data.ParentCategoryId" class="control-label"></label>
            @* <input asp-for="ParentCategoryId" class="form-control" /> *@
            <select asp-for="Data.ParentCategoryId" asp-items="@ViewBag.Categories" class="form-control" class="form-select">
            <option>Please select</option>
            </select>
            <span asp-validation-for="Data.ParentCategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data.Description" class="control-label"></label>
            <input asp-for="Data.Description" class="form-control" />
            <span asp-validation-for="Data.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data.Tags" class="control-label"></label>
            <input asp-for="Data.Tags" class="form-control" />
            <span asp-validation-for="Data.Tags" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
